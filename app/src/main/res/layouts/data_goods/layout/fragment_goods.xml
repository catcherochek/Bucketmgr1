<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/goods_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="costumerclass.HandleClick"
        android:text="Добавить"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="имя товара"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_below="@+id/goods_btn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/goods_btn1"
        android:layout_toStartOf="@+id/goods_btn1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goods_btn1"
        android:layout_toEndOf="@+id/goods_btn1"
        android:layout_toRightOf="@+id/goods_btn1"
        android:text="артикул" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="right"
        android:layout_below="@+id/textView6">

        <LinearLayout
            android:id="@+id/goods_dataview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView2"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:weightSum="1">


        </LinearLayout>
    </ScrollView>


</RelativeLayout>