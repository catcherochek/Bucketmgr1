<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/journaldebts_dataview_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/journaldebts_dataview_suppliername"
        android:layout_width="114dp"
        android:layout_height="21dp"
        android:text="Галя"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/journaldebts_dataview_id"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/journaldebts_dataview_goodsarticul"
        android:layout_width="53dp"
        android:layout_height="16dp"
        android:text="(3л)"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginRight="11dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="75dp" />


    <TextView
        android:id="@+id/journaldebts_dataview_goodscount"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@android:color/holo_blue_bright"
        android:textColorLink="@android:color/holo_blue_bright"
        tools:text="25"
        app:layout_constraintLeft_toRightOf="@+id/journaldebts_dataview_action"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/journaldebts_dataview_date"
        android:layout_width="234dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="10sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:text="Дата 2017/10/10 19:20"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/journaldebts_dataview_goodsname" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Запись N"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/journaldebts_dataview_description"
        android:layout_width="123dp"
        android:layout_height="49dp"
        android:layout_marginRight="10dp"
        android:shadowColor="@android:color/holo_green_light"
        android:text="АН 154241"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintLeft_toRightOf="@+id/journaldebts_dataview_suppliername"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.402" />

    <TextView
        android:id="@+id/journaldebts_dataview_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="взял(а)"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/journaldebts_dataview_goodsname"
        android:layout_width="270dp"
        android:layout_height="19dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="ведро 3л"
        android:textAlignment="viewStart"
        android:textColor="@android:color/holo_orange_light"
        app:layout_constraintLeft_toRightOf="@+id/journaldebts_dataview_goodscount"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="100dp"
        android:background="@android:color/background_dark"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/journaldebts_dataview_date" />


</android.support.constraint.ConstraintLayout>