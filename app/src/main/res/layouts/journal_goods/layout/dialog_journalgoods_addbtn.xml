<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50px"
        android:text="поставщик"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/dialog_journalgoods_addbtn_supplierspinner"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_weight="0.12" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50px"
        android:text="Артикул"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/dialog_journalgoods_addbtn_articlespinner"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_weight="0.19" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:text="принято"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/dialog_journalgoods_addbtn_textIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="0"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="отдано"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/dialog_journalgoods_addbtn_textOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="0"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:text="фото"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/dialog_journalgoods_addbtnbtn_PHOTO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_camera" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_journalgoods_addbtnbtn_OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ok" />

        <Button
            android:id="@+id/dialog_journalgoods_addbtnbtn_CANCEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>