<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".activities.journalgoods">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/fragment_journalgoods_btnrefresh"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:drawableBottom="@android:drawable/ic_popup_sync"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="364dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/fragment_journalgoods_btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="add"
        app:layout_constraintBottom_toTopOf="@+id/fragment_journalgoods_dataview"
        app:layout_constraintTop_toBottomOf="@+id/fragment_journalgoods_btnrefresh"
        app:layout_constraintVertical_bias="0.104"
        tools:layout_editor_absoluteX="16dp" />

    <Spinner
        android:id="@+id/fragment_journalgoods_spinnergoods"
        android:layout_width="183dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_journalgoods_dataview"
        app:layout_constraintLeft_toRightOf="@+id/fragment_journalgoods_btnAdd"
        app:layout_constraintTop_toBottomOf="@+id/fragment_journalgoods_spinnersupplier"
        app:layout_constraintVertical_bias="0.084" />

    <Spinner
        android:id="@+id/fragment_journalgoods_spinnersupplier"
        android:layout_width="274dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/fragment_journalgoods_btnrefresh"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="102dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="121dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="121dp" />

    <ListView
        android:id="@+id/fragment_journalgoods_dataview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="0.956"
        tools:layout_editor_absoluteX="6dp"
        android:layout_marginTop="100dp" />

    <EditText
        android:id="@+id/fragment_journalgoods_EditDatepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_journalgoods_spinnergoods" />

    <Button
        android:id="@+id/fragment_journalgoods_btnToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="today"
        app:layout_constraintTop_toBottomOf="@+id/fragment_journalgoods_btnAdd"
        tools:layout_editor_absoluteX="16dp" />


</android.support.constraint.ConstraintLayout>
