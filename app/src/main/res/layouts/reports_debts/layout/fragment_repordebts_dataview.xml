<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_reportdebts_dataview_suppliername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="20px"
        android:text="Вася"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/fragment_reportdebts_dataview_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/fragment_reportdebts_dataview_goodsarticul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment_reportdebts_dataview_suppliername"
        android:layout_weight="0.02"
        android:text="ящик"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@android:color/holo_green_dark" />


    <TextView
        android:id="@+id/fragment_reportdebts_dataview_goodscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment_reportdebts_dataview_goodsarticul"
        android:paddingLeft="20px"
        android:paddingRight="25px"
        android:textAlignment="textEnd"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="1" />


</LinearLayout>