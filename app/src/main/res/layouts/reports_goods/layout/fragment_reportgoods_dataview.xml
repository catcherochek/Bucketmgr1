<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/fragment_reportgoods_dataview_suppliername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="0.3"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/fragment_reportgoods_dataview_goodsarticul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment_reportgoods_dataview_suppliername"
        android:layout_weight="0.55"
        android:textAppearance="?attr/textAppearanceListItem" />


    <TextView
        android:id="@+id/fragment_reportgoods_dataview_goodscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment_reportgoods_dataview_goodsarticul"
        android:layout_weight="0.1"
        android:textAppearance="?attr/textAppearanceListItem" />


</LinearLayout>