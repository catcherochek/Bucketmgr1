<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/fragment_reportgoods_dataview_suppliername"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_weight="0.22" />

    <TextView
        android:id="@+id/fragment_reportgoods_dataview_goodsarticul"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment_reportgoods_dataview_suppliername"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_weight="0.71" />


    <TextView
        android:id="@+id/fragment_reportgoods_dataview_goodscount"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment_reportgoods_dataview_goodsarticul"
        android:textAppearance="?attr/textAppearanceListItem" />


</LinearLayout>